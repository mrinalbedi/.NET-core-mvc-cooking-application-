@model IEnumerable<Cooking.Models.Category>

@{
    ViewData["Title"] = "Measurement Categories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.MeasureCodeNavigation)*@
                Base Measure
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                
                    @Html.DisplayFor(modelItem => item.CategoryCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MeasureCodeNavigation.MeasureCode)
            </td>
            <td>
                <a asp-controller="Measure" asp-action="Index" asp-route-CategoryCode="@item.CategoryCode">Measures</a> |
                <a asp-action="Edit" asp-route-id="@item.CategoryCode">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CategoryCode">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CategoryCode">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
